<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEditProduct"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_edit_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_edit_image_height"
        android:scaleType="fitCenter"
        />

    <EditText
        android:id="@+id/activity_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_edit_edit_text_margin"
        android:layout_marginRight="@dimen/activity_edit_edit_text_margin"
        android:inputType="text"
        android:hint="@string/activity_edit_name_hint"/>

    <EditText
        android:id="@+id/activity_edit_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_edit_edit_text_margin"
        android:layout_marginRight="@dimen/activity_edit_edit_text_margin"
        android:inputType="text"
        android:hint="@string/activity_edit_store_hint"/>

    <EditText
        android:id="@+id/activity_edit_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_edit_edit_text_margin"
        android:layout_marginRight="@dimen/activity_edit_edit_text_margin"
        android:inputType="text"
        android:hint="@string/activity_edit_location_hint" />

    <EditText
        android:id="@+id/activity_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_edit_edit_text_margin"
        android:layout_marginRight="@dimen/activity_edit_edit_text_margin"
        android:inputType="phone"
        android:hint="@string/activity_edit_phone_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/activity_edit_save"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:padding="@dimen/activity_edit_button_padding"
            android:layout_height="wrap_content"
            android:text="@string/activity_edit_save"/>

        <Button
            android:id="@+id/activity_edit_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:padding="@dimen/activity_edit_button_padding"
            android:layout_height="wrap_content"
            android:text="@string/activity_edit_cancel"/>

    </LinearLayout>

</LinearLayout>